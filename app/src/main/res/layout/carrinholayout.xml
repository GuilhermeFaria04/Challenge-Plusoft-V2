<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/headerlayout" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/meu_carrinho"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:id="@+id/cartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#333"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/productTitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Nome do Produto"
                android:textColor="#FFF"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/productSubtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade"
                android:layout_marginEnd="20dp"
                android:textColor="#FFF"
                tools:ignore="HardcodedText" />


            <ImageView
                android:id="@+id/btnIncreaseQuantity"
                android:layout_width="17dp"
                android:layout_height="19dp"
                android:contentDescription="Aumentar quantidade"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_increase"
                android:tint="#FFF"
                tools:ignore="HardcodedText,UseAppTint" />

            <ImageView
                android:id="@+id/btnDecreaseQuantity"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:contentDescription="Diminuir quantidade"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_decrease"
                android:tint="#FFF"
                tools:ignore="HardcodedText,UseAppTint" />

            <TextView
                android:id="@+id/productPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PreÃ§o Total"
                android:layout_marginStart="8dp"
                android:textColor="#FFF"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/btnRemoveItem"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Remover produto"
                android:layout_marginStart="8dp"
                android:tint="#FFF"
                tools:ignore="HardcodedText,UseAppTint" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
